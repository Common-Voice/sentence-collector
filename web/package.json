{
  "name": "sentence-collector-web",
  "version": "0.0.1",
  "description": "A web console for collecting and validating sentences",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "start": "./node_modules/webpack/bin/webpack.js --watch --mode development",
    "build": "./node_modules/webpack/bin/webpack.js --mode production",
    "lint": "eslint src",
    "test": "npm run lint && jest"
  },
  "dependencies": {
    "connected-react-router": "^6.8.0",
    "hammerjs": "^2.0.8",
    "iso-639-1": "^2.1.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-persist": "^6.0.0",
    "redux-thunk": "^2.3.0",
    "regenerator-runtime": "^0.13.5"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@babel/runtime": "^7.12.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.2",
    "babel-loader": "^8.1.0",
    "babel-preset-env": "^1.7.0",
    "copy-webpack-plugin": "^6.3.0",
    "css-loader": "^5.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "enzyme-to-json": "^3.6.1",
    "eslint": "^7.12.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-enzyme": "^0.2.0",
    "eslint-plugin-react": "^7.21.5",
    "file-loader": "^6.2.0",
    "jest": "^26.6.2",
    "mini-css-extract-plugin": "^1.2.1",
    "react-test-renderer": "^17.0.1",
    "redux-mock-store": "^1.5.3",
    "style-loader": "^2.0.0",
    "webpack": "^5.3.2",
    "webpack-cli": "^4.1.0",
    "webpack-dev-server": "^3.11.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/coverage/**",
      "!**/dist/**",
      "!**/node_modules/**",
      "!**/tests/**",
      "!**/src/components/swipecard/**",
      "!webpack.config.js"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "transform": {
      "^.+\\.js$": "babel-jest",
      "\\.svg$": "<rootDir>/tests/file-transformer.js"
    },
    "setupFiles": [
      "<rootDir>/tests/test-setup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
